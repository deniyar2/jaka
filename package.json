  "dependencies": {
    "axios": "^1.7.9",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "express-rate-limit": "^7.5.0",
    "qrcode": "^1.5.4",
    "qs": "^6.14.0",
    "tsx": "^4.21.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^11.0.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "ipaddr.js": "^2.1.0"
  },
  "devDependencies": {
    "@types/multer": "^1.4.12",
    "@types/node": "^20.0.0",
    "@types/qrcode": "^1.5.6",
    "@types/qs": "^6.9.17",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.0.0",
    "vercel": "^39.0.0"
  }
