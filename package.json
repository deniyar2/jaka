{
  "name": "orderkuota-proxy",
  "version": "1.0.0",
  "description": "Proxy Gateway for OrderKuota API",
  "type": "module",
  "scripts": {
    "postinstall": "npm --prefix web install",

    "dev": "tsx server.ts",
    "start": "tsx server.ts",

    "dev:web": "npm --prefix web run dev",
    "build:web": "npm --prefix web run build",

    "build": "npm run build:web",
    "prod": "npm run start"
